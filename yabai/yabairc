source "$HOME/.config/colors.sh"

# sudo yabai --load-sa

yabai -m config layout bsp

yabai -m config window_shadow off
yabai -m config window_opacity on
yabai -m config normal_window_opacity 0.95
yabai -m config active_window_opacity 1.0 #0.95

yabai -m config window_gap 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config external_bar all:40:0

yabai -m config focus_follows_mouse autofocus
yabai -m config window_animation_duration 0 #0.2
yabai -m config window_opacity_duration 0.2
yabai -m config menubar_opacity 0.0


yabai -m rule --add app="^System Settings$" manage=off
# yabai -m rule --add app="^Ghostty$" opacity=0.95

borders hidpi=on active_color="$COLOR_ACCENT_3" inactive_color=$COLOR_BG_3 width=6.0
